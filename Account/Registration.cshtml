@model RegisterModel
@{
    ViewBag.Title = "Register";
}

<p> Already Registered? </p>

<form asp-action="LogIn" asp-controller="Account" method="post">
    <button class="btn btn-primary" type="submit"> LogIn </button>
</form>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/images/Register.jpg" class="img-thumbnail" height="150" />
        </div>
        <div class="col-md-6">

            
<h4>Register</h4>
<p>You are not yet registered for using Ufs Connect Book.
    Please enter your personal details to register, NOTE!, All fields are required.</p>

         

<h3> Please select your ROLE </h3>
<div class=" container"> 
 <div class="row justify-content-end">
        <div class="col-md-6">
<form asp-action="StudentRegister" method="post" asp-controller="Account" role="form">
    <form asp-action="StudentRegister" asp-controller="Account" method="post">

        <button class="btn btn-primary" type="submit"> Student </button>
        <div class="bg-light m-1 pb-2">
             <a class="navbar-brand" asp-controller="Account" asp-action="StudentRegister">
                <img src="~/images/Student.jpg" class="img-thumbnail" width="150" height="150" />
            </a>
            <h5 class="fst-italic">Student</h5>
          
        </div>

    </form>
    <br/>

    <form asp-action="StaffRegister" asp-controller="Account" method="post">

        <button class="btn btn-primary" type="submit"> Staff </button>
         <div class="bg-light m-1 pb-2">
            <a class="navbar-brand" asp-controller="Account" asp-action="StaffRegister">
                <img src="~/images/Staff.jpg" class="img-thumbnail"  width="150" height="150" />
            </a>
            <h5 class="fst-italic">Staff</h5>
            
        </div>


    </form>
    <br/>

    <form asp-action="GuestRegister" asp-controller="Account" method="post">

        <button class="btn btn-primary" type="submit"> Guest </button>

         <div class="bg-light m-1 pb-2">
             <a class="navbar-brand" asp-controller="Account" asp-action="GuestRegister">
                <img src="~/images/Guest.jpg" class="img-thumbnail" width="150" height="150" />
            </a>
            <h5 class="fst-italic">Guest</h5>
          
        </div>

    </form>
</form>
</div>
</div>
</div>
</div>
</div>
</div>

