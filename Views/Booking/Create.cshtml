@model Booking
@{
    ViewData["Title"] = "Bookings";
}
<style>
    body {
        background-image: url('/images/Booking.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }
</style>

<div style="display: flex;">
    <div style="width: 30%;">
        <img src="~/images/Booking.png" alt="Bookings Image" style="width: 100%;" />
    </div>
    <div style="width: 70%;">
<h4>Create new Booking</h4>

<form asp-action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label>Facility</label>
        <select asp-items="@ViewBag.FacilityId" asp-for="FacilityId" class="form-control">
            <option>--- Select Facility ---</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="EndTime"></label>
        <input asp-for="EndTime" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Booking</button>
        <a asp-action="Index"> See full list</a>
    </div>
</form>
</div>
</div>

