@{
    ViewData["Title"] = "Delete";
}
@model Facility
<h4>Delete Facility</h4>
<div>
    <h5>Are you sure you want to delete this facility</h5>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category!.Name)
        </dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for=FacilityId />
    <input asp-route-facilityId="@Model.FacilityId" type="submit" class="btn btn-danger" value="Confirm" />
</form>
<p>
    <a asp-action="Facilities" asp-controller="Manager">Back to List</a>
</p>