<script>
    $(document).ready(function () {
        var currentIndex = 0;
        var items = $('.bg-image');
        var totalItems = items.length;

        function showNextImage() {
            items.eq(currentIndex).removeClass('visible');
            currentIndex = (currentIndex + 1) % totalItems;
            items.eq(currentIndex).addClass('visible');
        }

        setInterval(showNextImage, 4000);
    });
</script>

<script>
    var welcomeText = document.getElementById("welcomeText");
    var words = welcomeText.innerText.split(' ');
    welcomeText.innerText = ''; // Clear the initial text

    function displayWords() {
        words.forEach(function (word, index) {
            setTimeout(function () {
                welcomeText.innerText += word + ' ';
            }, index * 2000); // Display each word every 2 seconds
        });
    }

    // Call the function to display words
    displayWords();
</script>




