@{
    ViewData["Title"] = "Change Password";
}
@model PasswordChangeModel
<section class="section profile">
    <h4>Change Password</h4>
    
    <form method="post" asp-action="ChangePassword">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row mb-3">
            <label for="firstname" class="col-md-4 col-lg-3 col-form-label">Current Password</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for=CurrentPassword type="password" class="form-control" id="firstname">
            </div>
        </div>
        <div class="row mb-3">
            <label for="surname" class="col-md-4 col-lg-3 col-form-label">New Password</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for=Password type="password" class="form-control" id="surname">
            </div>
        </div>
        <div class="row mb-3">
            <label for="stdnum" class="col-md-4 col-lg-3 col-form-label">Confirm new password</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for=ConfirmPassword type="password" class="form-control" id="stdnum">
            </div>
        </div>

        <br/>
        <div class="row mb-3">
            <div class="col-md-8 col-lg-9">
                <button type="submit" class="btn btn-primary">Change Password</button>

            </div>
        </div>
    </form>

</section>
