@{
    ViewData["Title"] = "Profile";
}
@model AppUserViewModel
<section class="section profile">
    <h4>Edit Profile</h4>
    <!-- Profile Edit Form -->
    <form method="post" asp-action="Edit">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row mb-3">
            <label for="firstname" class="col-md-4 col-lg-3 col-form-label">First Name</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for=Name type="text" class="form-control" id="firstname">
            </div>
        </div>
        <div class="row mb-3">
            <label for="surname" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for=Surname type="text" class="form-control" id="surname">
            </div>
        </div>
        <div class="row mb-3">
            <label for="stdnum" class="col-md-4 col-lg-3 col-form-label">Student Number</label>
            <div class="col-md-8 col-lg-9">
                <input asp-for=StudentNumber type="text" class="form-control" id="stdnum">
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-8 col-lg-9">
                <button type="submit" class="btn btn-primary">Save Changes</button>

            </div>
        </div>
    </form><!-- End Profile Edit Form -->

</section>
